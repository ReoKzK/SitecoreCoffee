@model SitecoreCoffee.Feature.Commerce.ViewModel.CartAdminViewModel

<div>
    
    @foreach (var cart in Model.Carts)
    {
        <div class="row">
            <div class="col-md-8 order-md-1">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Cart info</span>
                </h4>

                <div class="row border-bottom border-top">
                    <div class="col-md-4 font-weight-bold">Name:</div>
                    <div class="col-md-8">@cart.Name</div>
                </div>
                @*<div class="row border-bottom">
                    <div class="col-md-4 font-weight-bold">TotalAmount:</div>
                    <div class="col-md-8">@Model.Cart.TotalAmount</div>
                </div>*@
                <div class="row border-bottom">
                    <div class="col-md-4 font-weight-bold">ShopName:</div>
                    <div class="col-md-8">@cart.Info.ShopName</div>
                </div>
                <div class="row border-bottom">
                    <div class="col-md-4 font-weight-bold">ExternalId:</div>
                    <div class="col-md-8">@cart.Info.ExternalId</div>
                </div>
                <div class="row border-bottom">
                    <div class="col-md-4 font-weight-bold">UserId:</div>
                    <div class="col-md-8">@cart.Info.UserId</div>
                </div>

                <div class="row border-bottom">
                    <div class="col-md-4 font-weight-bold">IsPopulated:</div>
                    <div class="col-md-8">@cart.Properties.IsPopulated</div>
                </div>
                <div class="row border-bottom">
                    <div class="col-md-4 font-weight-bold">VatNumber:</div>
                    <div class="col-md-8">@cart.Properties.VatNumber</div>
                </div>

            </div>
        </div>
    }

</div>